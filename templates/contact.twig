{% extends "siteBase.twig" %}

{% block content %}

    <div class="contactWrapper">

        <div class="formWrapper">

            <form id="contactForm">

                <ul>
                    <li>
                        <label for="name">* Your Name:</label>
                        <input type="text" name="name" id="contactName">
                    </li>
                    <li>
                        <label for="email">* Your E-mail:</label>
                        <input type="text" name="email" id="contactEmail">
                    </li>
                    <li>
                        <label for="Message">* Your Message:</label><br>
                        <textarea id="messageText" rows="4" cols="30" placeholder="Type your message."></textarea> 
                    </li>
                    <li>
                        <input id="contactSend" type="button" value="Send">
                    </li>          
                </ul>

            </form>

            <p>* Required</p>

        </div>

        <div class="map">
            <iframe width="325" height="280" frameborder="0" src="https://www4.bing.com/maps/embed?h=280&w=325&cp=49.22556100000001~-123.11825599999999&lvl=13&typ=d&sty=r&src=SHELL&FORM=MBEDV8" scrolling="no">
            </iframe>
            <div style="white-space: nowrap; text-align: center; width: 325px; padding: 6px 0;">
                <a id="largeMapLink" target="_blank" href="https://www4.bing.com/maps?cp=49.22556100000001~-123.11825599999999&amp;sty=r&amp;lvl=13&amp;FORM=MBEDLD">View Larger Map</a> &nbsp; | &nbsp;
                <a id="dirMapLink" target="_blank" href="https://www4.bing.com/maps/directions?cp=49.22556100000001~-123.11825599999999&amp;sty=r&amp;lvl=13&amp;rtp=~pos.49.22556100000001_-123.11825599999999____&amp;FORM=MBEDLD">Get Directions</a>
            </div>
        </div>

    </div>

{% endblock %}